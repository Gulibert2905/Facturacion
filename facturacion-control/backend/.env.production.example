# ==================================
# CONFIGURACIÓN PARA PRODUCCIÓN
# ==================================
# IMPORTANTE: Copia este archivo a .env.production y configura los valores reales

# Entorno
NODE_ENV=production

# Puerto del servidor
PORT=5000

# Base de datos MongoDB
MONGODB_URI=mongodb://facturacion_user:SECURE_PASSWORD_HERE@localhost:27017/facturacion?authSource=admin
MONGODB_USER=facturacion_user
MONGODB_PASSWORD=GENERATE_STRONG_PASSWORD_HERE

# JWT Secret (DEBE generarse nuevo para producción)
JWT_SECRET=GENERATE_STRONG_JWT_SECRET_HERE

# URLs permitidas (actualizar con dominios reales)
ALLOWED_ORIGINS=https://tu-dominio.com,https://www.tu-dominio.com,https://app.tu-dominio.com
FRONTEND_URL=https://tu-dominio.com

# SSL/HTTPS
HTTPS_ENABLED=true
SSL_CERT_PATH=/path/to/certificate.crt
SSL_KEY_PATH=/path/to/private.key

# Rate Limiting (más restrictivo en producción)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50
LOGIN_RATE_LIMIT_WINDOW_MS=900000
LOGIN_RATE_LIMIT_MAX_ATTEMPTS=3

# Logging
LOG_LEVEL=warn
LOG_FILE_PATH=/var/log/facturacion
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Email (configurar para notificaciones)
EMAIL_ENABLED=true
SMTP_HOST=smtp.tu-servidor.com
SMTP_PORT=587
SMTP_USER=noreply@tu-dominio.com
SMTP_PASS=SMTP_PASSWORD_HERE
EMAIL_FROM=Sistema Facturación <noreply@tu-dominio.com>

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/facturacion

# Monitoreo
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Seguridad adicional
TRUST_PROXY=true
SECURE_COOKIES=true
HELMET_CSP_ENABLED=true