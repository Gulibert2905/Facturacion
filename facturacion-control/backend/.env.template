# ================================
# TEMPLATE DE VARIABLES DE ENTORNO
# ================================
# Copia este archivo como .env y configura los valores apropiados

# ============================
# CONFIGURACIÓN DEL SERVIDOR
# ============================
NODE_ENV=production
PORT=8080

# ============================
# BASE DE DATOS
# ============================
MONGODB_URI=mongodb://localhost:27017/facturacion_prod
MONGODB_USER=facturacion_user
MONGODB_PASSWORD=CHANGE_ME_SECURE_PASSWORD_HERE

# Para MongoDB Atlas (producción recomendada):
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/facturacion_prod?retryWrites=true&w=majority

# ============================
# SEGURIDAD
# ============================
# IMPORTANTE: Generar nuevo JWT_SECRET para producción usando:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_ME_GENERATE_NEW_SECRET_64_BYTES

# Duración de tokens JWT (en minutos o días)
JWT_EXPIRES_IN=30d
JWT_REFRESH_EXPIRES_IN=7d

# ============================
# CORS Y FRONTEND
# ============================
FRONTEND_URL=https://tudominio.com
ALLOWED_ORIGINS=https://tudominio.com,https://www.tudominio.com

# ============================
# RATE LIMITING
# ============================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_WINDOW_MS=900000
LOGIN_RATE_LIMIT_MAX_ATTEMPTS=5

# ============================
# EMAIL (OPCIONAL)
# ============================
EMAIL_ENABLED=false
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=Sistema de Facturación <no-reply@tudominio.com>

# ============================
# LOGGING
# ============================
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# ============================
# SSL/TLS (Para producción con HTTPS)
# ============================
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/certificate.crt
SSL_KEY_PATH=/path/to/private.key

# ============================
# BACKUP (OPCIONAL)
# ============================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/facturacion

# ============================
# MONITOREO (OPCIONAL)
# ============================
METRICS_ENABLED=false
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# ============================
# NOTIFICACIONES (OPCIONAL)
# ============================
SLACK_WEBHOOK_URL=
WEBHOOK_ALERTS_ENABLED=false

# ============================
# DESARROLLO/TESTING
# ============================
ENABLE_CORS=true
ENABLE_DETAILED_ERRORS=false
SEED_DB_ON_START=false