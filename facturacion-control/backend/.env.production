# ================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ================================
# ⚠️  IMPORTANTE: Cambiar todos los valores antes de usar

# ============================
# CONFIGURACIÓN DEL SERVIDOR
# ============================
NODE_ENV=production
PORT=8080

# ============================
# BASE DE DATOS - CAMBIAR OBLIGATORIO
# ============================
# Para MongoDB Atlas (recomendado para producción)
MONGODB_URI=mongodb+srv://USERNAME:PASSWORD@cluster.mongodb.net/facturacion_prod?retryWrites=true&w=majority
MONGODB_USER=facturacion_prod_user
MONGODB_PASSWORD=CHANGE_ME_SUPER_SECURE_PASSWORD_HERE

# Para MongoDB local (menos recomendado)
# MONGODB_URI=mongodb://localhost:27017/facturacion_prod

# ============================
# SEGURIDAD - CAMBIAR OBLIGATORIO
# ============================
# ⚠️  GENERAR NUEVO SECRET: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_ME_GENERATE_NEW_64_BYTE_SECRET_HERE

# Duración de tokens
JWT_EXPIRES_IN=30d
JWT_REFRESH_EXPIRES_IN=7d

# ============================
# CORS Y FRONTEND - CAMBIAR OBLIGATORIO
# ============================
FRONTEND_URL=https://tudominio.com
ALLOWED_ORIGINS=https://tudominio.com,https://www.tudominio.com

# ============================
# RATE LIMITING (Configuración estricta para producción)
# ============================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_WINDOW_MS=900000
LOGIN_RATE_LIMIT_MAX_ATTEMPTS=5

# ============================
# EMAIL (Configurar si se usa)
# ============================
EMAIL_ENABLED=true
EMAIL_SERVICE=gmail
EMAIL_USER=sistema@tudominio.com
EMAIL_PASSWORD=tu-app-password-gmail
EMAIL_FROM=Sistema de Facturación <no-reply@tudominio.com>

# ============================
# LOGGING
# ============================
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# ============================
# SSL/TLS
# ============================
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/certificate.crt
SSL_KEY_PATH=/etc/ssl/private/private.key

# ============================
# BACKUP
# ============================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/facturacion

# ============================
# MONITOREO
# ============================
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# ============================
# NOTIFICACIONES
# ============================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
WEBHOOK_ALERTS_ENABLED=true

# ============================
# CONFIGURACIONES DE PRODUCCIÓN
# ============================
ENABLE_CORS=true
ENABLE_DETAILED_ERRORS=false
SEED_DB_ON_START=false

# ============================
# CONFIGURACIONES ADICIONALES
# ============================
# Timezone
TZ=America/Bogota

# Max file upload size
MAX_UPLOAD_SIZE=10mb

# Session timeout (minutos)
SESSION_TIMEOUT=30